{
    "Environment": "Development",
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.MySQL"
        ],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "System": "Debug",
                "Microsoft": "Debug",
                "Microsoft.AspNetCore": "Debug"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "MySQL",
                "Args": {
                    "autoCreateTable": true,
                    "tableName": "Log",
                    "restrictedToMinimumLevel": "Error",
                    "batchPostingLimit": 1000,
                    "period": "0.00:00:10",
                    "options": {
                        "PropertiesToColumnsMapping": {
                            "Exception": "Exception",
                            "Level": "Level",
                            "Message": "Message",
                            "MessageTemplate": "MessageTemplate",
                            "Properties": "Properties",
                            "Timestamp": "Timestamp"
                        },
                        "TimestampInUtc": true,
                        "ExcludePropertiesWithDedicatedColumn": true,
                        "EnumsAsInts": true,
                        "LogRecordsCleanupFrequency": "0.02:00:00",
                        "LogRecordsExpiration": "31.00:00:00"
                    }
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithThreadId",
            "WithMachineName"
        ],
        "Destructure": [
            {
                "Name": "ToMaximumDepth",
                "Args": {
                    "maximumDestructuringDepth": 4
                }
            },
            {
                "Name": "ToMaximumStringLength",
                "Args": {
                    "maximumStringLength": 100
                }
            },
            {
                "Name": "ToMaximumCollectionCount",
                "Args": {
                    "maximumCollectionCount": 10
                }
            }
        ],
        "Properties": {
            "Application": "design-patterns-in-microservices"
        }
    },
    "ConnectionStrings": {
        "App": "Server=localhost;Port=23309;Database=App;User=app;Password=Ena1dio2tria3!;Allow User Variables=true"
    },
    "MessageBroker": {
        "Host": "amqp://localhost:5424",
        "Username": "app",
        "Password": "Ena1dio2tria3!"
    }
}
